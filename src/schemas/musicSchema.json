{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "Music records",
  "properties": {
    "records": {
      "type": "array",
      "items": {
        "title": "A single record of the band",
        "type": "object",
        "additionalProperties": false,
        "minProperties": 9,
        "properties": {
          "name": {
            "type": "string"
          },
          "release": {
            "type": "string"
          },
          "price": {
            "properties": {
              "currency": {
                "type": "string"
              },
              "price": {
                "type": "number"
              }
            }
          },
          "format": {
            "type": "string",
            "enum": ["Album", "Mini-album", "Single", "Compilation"]
          },
          "medium": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["CD", "Mini CD", "LP", "Cassette"],
              "default": "CD"
            },
            "minItems": 1,
            "maxItems": 4,
            "uniqueItems": true
          },
          "labels": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["ALINNOS RECORDS", "Tricycle Entertainment"]
            }
          },
          "catalog": {
            "type": "string"
          },
          "barcode": {
            "type": "string"
          },
          "songs": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "minProperties": 2,
              "properties": {
                "name": {
                  "type": "string"
                },
                "length": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
